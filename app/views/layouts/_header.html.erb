<header class="navbar navbar-default navbar-fixed-top" id="topNav">
  <div class="container">
    <%= link_to (image_tag "mike.png", alt: "Brand", size: "108x108", class: "img-circle", id: "logo-img"), '/' %>
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "VMKDaily",   '/', id: "logo"%></li>
      </ul>
    </nav>
  </div>

  <div class="container-fluid" id="botNav">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav navbar-right" id="nav-urls">
        <li class="<%= 'active' if params[:action] == 'home' %>">
            <%= link_to "Home", root_path %></li>
        <li class="<%= 'active' if params[:action] == 'about' %>">
            <%= link_to "About", about_path %></li>
        <li class="<%= 'active' if params[:action] == 'articles' %>">
            <%= link_to "Articles", articles_path %></li>
        <li class="<%= 'active' if params[:action] == 'contact' %>">
            <%= link_to "Contact", contact_path %></li>
        <!-- Drop down nav / Logged in nav view -->
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" 
               role="button" aria-haspopup="true" aria-expanded="false">
               <%= @current_user.name %><span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li class="<%= 'active' if params[:controller] == 'users' && params[:action] == 'show' %>">
                  <%= link_to_fa "Profile", current_user, "user" %></li>
              <li class="<%= 'active' if params[:controller] == 'users' && params[:action] == 'edit' %>">
                  <%= link_to_fa "Settings", edit_user_path(current_user), "gear" %></li>
               <li class="<%= 'active' if params[:controller] == 'users' && params[:action] == 'index' %>">
                  <%= link_to_fa "Users", users_path, "users" %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to '<i class="fa fa-sign-out"></i>&nbsp; Log Out'.html_safe, logout_path, method: "delete" %></li>
            </ul>
          </li>
        <% end %>    
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->

</header>


