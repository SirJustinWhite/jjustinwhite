<% provide(:title, 'Forgot password') %>
<h1 class="center">Forgot password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= simple_form_for(:password_reset, url: password_resets_path, html: { class: 'form-vertical'}) do |f| %>
  	  <%= f.input :email, :error => false %>
  	  <%= f.button :submit, "Retrieve Password", class: "btn-primary" %>
  	<% end %>
  </div>	
</div>
